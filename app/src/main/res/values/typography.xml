<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Text14sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text16sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text18sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text20sp" parent="TextBase">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputView" parent="Text16sp">
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>