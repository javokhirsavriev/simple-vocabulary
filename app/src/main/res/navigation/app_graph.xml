<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.home.HomeFragment"
        android:label="@string/all_sets"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeToSetDetail"
            app:destination="@id/setDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/homeToWordList"
            app:destination="@id/wordListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/setDetailFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.setDetail.SetDetailFragment"
        android:label="@string/all_sets"
        tools:layout="@layout/fragment_set_detail" />

    <fragment
        android:id="@+id/wordListFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.wordList.WordListFragment"
        android:label="@string/all_words"
        tools:layout="@layout/fragment_word_list">
        <action
            android:id="@+id/wordListToDetail"
            app:destination="@id/wordDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/wordDetailFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.wordDetail.WordDetailFragment"
        android:label="@string/all_words"
        tools:layout="@layout/fragment_word_detail" />
</navigation>