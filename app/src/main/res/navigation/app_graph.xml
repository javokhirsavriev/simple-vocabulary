<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.home.HomeFragment"
        android:label="@string/study_sets"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeToSetDetail"
            app:destination="@id/setDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/homeToCardList"
            app:destination="@id/cardListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/setDetailFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.setDetail.SetDetailFragment"
        android:label="@string/study_sets"
        tools:layout="@layout/fragment_set_detail">
        <argument
            android:name="setId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/cardListFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.cardList.CardListFragment"
        android:label="@string/cards"
        tools:layout="@layout/fragment_card_list">
        <action
            android:id="@+id/cardListToSetDetail"
            app:destination="@id/setDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/cardListToDetail"
            app:destination="@id/cardDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="setId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.cardDetail.CardDetailFragment"
        android:label="@string/cards"
        tools:layout="@layout/fragment_card_detail">
        <argument
            android:name="cardId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="setId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

</navigation>