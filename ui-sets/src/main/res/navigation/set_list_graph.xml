<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setList"
    app:startDestination="@id/setListFragment">

    <include app:graph="@navigation/set_detail_graph" />
    <include app:graph="@navigation/card_list_graph" />

    <fragment
        android:id="@+id/setListFragment"
        android:name="uz.javokhirdev.svocabulary.presentation.sets.SetListFragment"
        android:label="@string/study_sets"
        tools:layout="@layout/fragment_set_list">
        <action
            android:id="@+id/setListToDetail"
            app:destination="@id/setDetail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="setId"
                android:defaultValue="-1L"
                app:argType="long" />
        </action>
        <action
            android:id="@+id/setListToCardList"
            app:destination="@id/cardList"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="setId"
                android:defaultValue="-1L"
                app:argType="long" />
        </action>
    </fragment>

</navigation>